{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./backend",
    "types": ["jest", "node"],

    "skipLibCheck": true   // 👈 これを追加！
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "dist"]
}
